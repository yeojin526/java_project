package sec03.exam01;

import java.util.Scanner;

public class Id {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int i;
		int score[];
		int sum=0;
		score = new int[3];
		for(i=1;i<=3;i++) {
			sum+=i;
			
		System.out.print("1000 이상의 숫자 중"+i+"번째 숫자를 입력하시오.>");
		
		int num1 = sc.nextInt();
		
		if(num1>=1000) 
		System.out.println(num1);
		else 
		System.out.println("※1000 이상의 수를 입력해야합니다.");
		
		}
	}
}