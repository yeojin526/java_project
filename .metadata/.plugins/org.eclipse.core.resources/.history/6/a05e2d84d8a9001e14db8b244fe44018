package sec03.exam01;

import java.util.Scanner;

public class Id {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int i; //변수 i 선언
		int score[]; // 배열 score 선언
		int sum=0; //변수 sum 선언 및 초기화
		score = new int[5]; //score는 5개의 정수를 갖는 배열이다.
		
		System.out.println("학생 5명의 성적을 입력하세요:");     //안내말 출력
		for(i=0;i<score.length;i++);{    //배열값을 저장하는 변수 score의 길이만큼 i가 반복됨
		score[i]=sc.nextInt();           //키보드 값을 읽어서 배열 score에 저장한다.
		}
		
		for(i=0,sum=0;i<score.length;i++) { 
	    //초기화는 i=0,sum=0 종료조건은 scorer의 길이만큼 반복된 경우, 반복조건은 i에 1씩 더한다. 
			sum=sum+score[i]; //sum = 0과 score의 원소들의 합
		}
		
		
		
		}
	}

		
