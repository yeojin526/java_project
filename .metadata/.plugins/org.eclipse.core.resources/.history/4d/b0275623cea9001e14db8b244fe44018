package sec03.exam01;

import java.util.Scanner;

public class Id {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int num1 = sc.nextInt();
		int i;
		for(i=1;i<=2;i++) {
		System.out.print("숫자를 입력하시오.>");
		
		if(num1>1000) 
		System.out.println(num1+"??!");
		else 
		System.out.println("1000 이상의 수를 입력해야합니다.");
		}
		
}
}